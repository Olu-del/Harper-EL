<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>
<body>
    <!-- Navigation bar -->
    <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/register">Register</a>
        <a href="/account">Account</a>
        <a href="/courses">Video Section</a>
        <a href="/search-result">Search</a>
        <a href="/contact">Contact</a>
    </nav>

    <!-- Main content -->
    <h1>Welcome, <%= username %>!</h1>

    <a href="/signout-confirmation">Sign out</a>

    <h2>Your Search History:</h2>
    <% if (searchHistory.length > 0) { %>
        <ul>
            <% searchHistory.forEach(function(record) { %>
                <li>
                    "<%= record.search_query %>" (searched on <%= new Date(record.timestamp).toLocaleString() %>)
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No search history found.</p>
    <% } %>

    <!-- Footer -->
    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Harper eLearning Platform. All rights reserved.</p>
        <nav>
            <a href="/about">About</a>
            <a href="/register">Join</a>
            <a href="/contact">Contact</a>
        </nav>
    </footer>
</body>
</html>
